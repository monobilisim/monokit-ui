{
  "name": "monokit-ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun --bun run vite dev",
    "ddev": "DEBUG=vite:* bun dev",
    "build": "bun --bun run vite build",
    "preview": "bun --bun run vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "bun --bun vitest --run --browser.headless=true",
    "prepare-assets": "bun --bun run embed-imports.js",
    "install-chrome": "bun --bun run playwright install chromium",
    "create-binary": "BUILD_STEP=1 bun run build && bun run prepare-assets && bun build --compile --minify --sourcemap index.ts embedded-imports.js --outfile build/monokit-ui"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.33.0",
    "@lucide/svelte": "0.542.0",
    "@sveltejs/kit": "^2.37.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bun": "^1.2.21-canary.20250827T140618",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-shape": "^3.1.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@vitest/browser": "^3.2.4",
    "bits-ui": "^2.9.3",
    "clsx": "^2.1.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "formsnap": "^2.0.1",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.0",
    "layerchart": "2.0.0-next.27",
    "mode-watcher": "^1.1.0",
    "paneforge": "^1.0.2",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shiki": "^3.9.2",
    "svelte": "^5.38.1",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.3.1",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/theme-one-dark": "^6.1.3"
  }
}
