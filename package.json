{
  "name": "monokit-ui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun --bun run vite dev",
    "build": "bun --bun run vite build",
    "preview": "bun --bun run vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "bun --bun vitest --run --browser.headless=true",
    "prepare-assets": "bun --bun run embed-imports.js",
    "install-chrome": "bun --bun run playwright install chromium",
    "create-binary": "bun run build && bun run prepare-assets && bun build --compile --minify --sourcemap index.ts embedded-imports.js --outfile build/monokit-ui"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@lucide/svelte": "^0.525.0",
    "@sveltejs/kit": "^2.25.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bun": "^1.2.18",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-shape": "^3.1.7",
    "@types/node": "^24.0.14",
    "@vitest/browser": "^3.2.4",
    "bits-ui": "^2.8.11",
    "clsx": "^2.1.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.11.0",
    "formsnap": "^2.0.1",
    "globals": "^16.3.0",
    "layerchart": "2.0.0-next.27",
    "lucide-svelte": "^0.525.0",
    "mode-watcher": "^1.1.0",
    "paneforge": "^1.0.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shiki": "^3.8.1",
    "svelte": "^5.36.7",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "^4.3.0",
    "svelte-sonner": "^1.0.5",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.0.0"
  }
}
